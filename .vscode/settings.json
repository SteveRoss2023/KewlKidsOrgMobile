{
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "args": [
        "-NoExit",
        "-Command",
        "cd '${workspaceFolder}\\backend'; if (Test-Path 'venv\\Scripts\\Activate.ps1') { .\\venv\\Scripts\\Activate.ps1; Write-Host 'Virtual environment activated!' -ForegroundColor Green }"
      ]
    },
    "PowerShell (Backend)": {
      "path": "powershell.exe",
      "args": [
        "-NoExit",
        "-Command",
        "cd '${workspaceFolder}\\backend'; if (Test-Path 'venv\\Scripts\\Activate.ps1') { .\\venv\\Scripts\\Activate.ps1; Write-Host 'Virtual environment activated!' -ForegroundColor Green }"
      ],
      "icon": "terminal-powershell"
    }
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.cwd": "${workspaceFolder}/backend",
  "python.terminal.activateEnvironment": true,
  "python.terminal.activateEnvInCurrentTerminal": true,
  "files.eol": "\n",
  "files.insertFinalNewline": false,
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "[typescript]": {
    "files.eol": "\n",
    "files.insertFinalNewline": true
  },
  "[typescriptreact]": {
    "files.eol": "\n",
    "files.insertFinalNewline": true
  },
  "[javascript]": {
    "files.eol": "\n",
    "files.insertFinalNewline": true
  },
  "[javascriptreact]": {
    "files.eol": "\n",
    "files.insertFinalNewline": true
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  }
}

